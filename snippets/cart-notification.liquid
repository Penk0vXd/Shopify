{%- comment -%}
  Cart Notification Component
  Renders a notification when items are added to cart
{%- endcomment -%}

<div class="cart-notification-wrapper" data-cart-notification>
  <div class="cart-notification{% if color_scheme %} color-{{ color_scheme }}{% endif %}" id="cart-notification" aria-modal="true" aria-label="{{ 'sections.cart.title' | t }}" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="cart-notification__header">
      <h2 class="cart-notification__heading">{{ 'sections.cart.title' | t }}</h2>
      <button class="cart-notification__close modal__close-button link link--text focus-inset" type="button" aria-label="{{ 'accessibility.close' | t }}">
        <svg class="icon icon-close" aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 17" width="18" height="17">
          <path d="M.865 15.978a.5.5 0 00.707.707l7.433-7.431 7.579 7.282a.501.501 0 00.846-.37.5.5 0 00-.153-.351L9.712 8.546l7.417-7.416a.5.5 0 10-.707-.708L8.991 7.853 1.413.573a.5.5 0 10-.693.72l7.563 7.268-7.418 7.417z" stroke="currentColor" fill="currentColor" stroke-width="0"/>
        </svg>
      </button>
    </div>
    
    <div class="cart-notification-product" id="cart-notification-product"></div>
    
    <div class="cart-notification__footer">
      <div class="cart-notification__links">
        <a href="{{ routes.cart_url }}" class="button button--secondary button--full-width">{{ 'sections.cart.cart' | t }}</a>
        <form action="{{ routes.cart_url }}" method="post" id="cart-notification-form">
          <button class="button button--primary button--full-width" name="add" type="submit">
            {{ 'sections.cart.checkout' | t }}
          </button>
        </form>
        <button type="button" class="link button-label">{{ 'general.continue_shopping' | t }}</button>
      </div>
    </div>
  </div>
</div>

<style>
  .cart-notification-wrapper {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    display: none;
  }
  
  .cart-notification-wrapper[aria-hidden="false"] {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .cart-notification {
    background: var(--color-background);
    max-width: 400px;
    width: 90%;
    max-height: 80vh;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  
  .cart-notification__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid var(--color-surface);
  }
  
  .cart-notification__heading {
    margin: 0;
    font-size: 1.5rem;
  }
  
  .cart-notification__close {
    background: none;
    border: none;
    padding: 5px;
    cursor: pointer;
  }
  
  .cart-notification-product {
    padding: 20px;
  }
  
  .cart-notification__footer {
    padding: 20px;
    border-top: 1px solid var(--color-surface);
  }
  
  .cart-notification__links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .button {
    padding: 12px 24px;
    text-align: center;
    text-decoration: none;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }
  
  .button--primary {
    background: var(--color-primary);
    color: white;
  }
  
  .button--secondary {
    background: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }
  
  .button--full-width {
    width: 100%;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const cartNotification = document.querySelector('[data-cart-notification]');
    const closeButton = cartNotification.querySelector('.cart-notification__close');
    
    if (closeButton) {
      closeButton.addEventListener('click', function() {
        cartNotification.setAttribute('aria-hidden', 'true');
        cartNotification.style.display = 'none';
      });
    }
    
    // Close on background click
    cartNotification.addEventListener('click', function(e) {
      if (e.target === cartNotification) {
        cartNotification.setAttribute('aria-hidden', 'true');
        cartNotification.style.display = 'none';
      }
    });
  });
</script> 