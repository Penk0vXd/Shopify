{%- style -%}
.search-parts-page {
  padding: 40px 0 80px;
  min-height: 70vh;
}

.search-parts-container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0 20px;
}

.search-parts-header {
  text-align: center;
  margin-bottom: 40px;
}

.search-parts-title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 20px;
  line-height: 1.2;
}

.search-parts-subtitle {
  font-size: 1.3rem;
  color: var(--color-text-light);
  max-width: 600px;
  margin: 0 auto 30px;
  line-height: 1.5;
}

.search-tips {
  background: rgba(211, 47, 47, 0.05);
  border: 2px solid var(--color-primary-light);
  border-radius: 12px;
  padding: 30px;
  margin-top: 50px;
  text-align: center;
}

.search-tips h3 {
  color: var(--color-primary);
  font-size: 1.5rem;
  margin-bottom: 20px;
}

.search-tips-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  margin-top: 30px;
}

.search-tip {
  text-align: center;
}

.search-tip-icon {
  font-size: 2.5rem;
  margin-bottom: 15px;
  display: block;
}

.search-tip h4 {
  color: var(--color-primary);
  font-size: 1.2rem;
  margin-bottom: 10px;
}

.search-tip p {
  color: var(--color-text-light);
  line-height: 1.5;
}

@media (max-width: 768px) {
  .search-parts-title {
    font-size: 2.5rem;
  }
  
  .search-parts-subtitle {
    font-size: 1.1rem;
  }
  
  .search-tips {
    padding: 20px;
  }
  
  .search-tips-grid {
    grid-template-columns: 1fr;
    gap: 25px;
  }
}
{%- endstyle -%}

