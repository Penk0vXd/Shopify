{%- style -%}
  .collection-page {
    padding: 40px 0;
  }

  .collection-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .collection-header {
    text-align: center;
    margin-bottom: 50px;
    padding-bottom: 30px;
    border-bottom: 2px solid var(--color-surface);
  }

  .collection-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 15px;
  }

  .collection-description {
    font-size: 1.1rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .collection-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    flex-wrap: wrap;
    gap: 20px;
  }

  .collection-sorting {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .collection-count {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .sort-select {
    padding: 8px 12px;
    border: 2px solid var(--color-surface);
    border-radius: 6px;
    background-color: var(--color-background);
    color: var(--color-text);
    font-size: 14px;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .sort-select:hover,
  .sort-select:focus {
    border-color: var(--color-primary);
    outline: none;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  .product-card {
    background: var(--color-background);
    border: 1px solid var(--color-surface);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .product-card:hover {
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transform: translateY(-4px);
    border-color: var(--color-primary);
  }

  .product-card__image-wrapper {
    position: relative;
    padding-bottom: 75%;
    overflow: hidden;
    background-color: var(--color-surface);
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: var(--color-primary);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    z-index: 2;
  }

  .product-card__info {
    padding: 20px;
  }

  .product-card__vendor {
    font-size: 0.8rem;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
  }

  .product-card__title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 10px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__price-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
  }

  .product-card__price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .product-card__compare-price {
    font-size: 1rem;
    color: var(--color-text-light);
    text-decoration: line-through;
  }

  .product-card__button {
    width: 100%;
    background-color: var(--color-primary);
    color: white;
    border: none;
    padding: 12px;
    border-radius: 6px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
  }

  .product-card__button:hover {
    background-color: var(--color-primary-dark);
    transform: translateY(-1px);
  }

  .product-card__button:disabled {
    background-color: var(--color-text-light);
    cursor: not-allowed;
    transform: none;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 10px;
    margin-top: 50px;
  }

  .pagination__item {
    padding: 10px 15px;
    border: 2px solid var(--color-surface);
    background-color: var(--color-background);
    color: var(--color-text);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    font-weight: 500;
  }

  .pagination__item:hover,
  .pagination__item.current {
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    color: white;
  }

  .empty-collection {
    text-align: center;
    padding: 80px 20px;
  }

  .empty-collection h2 {
    font-size: 1.5rem;
    color: var(--color-text);
    margin-bottom: 15px;
  }

  .empty-collection p {
    color: var(--color-text-light);
    margin-bottom: 30px;
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
    
    .collection-controls {
      flex-direction: column;
      align-items: stretch;
    }
    
    .collection-sorting {
      justify-content: space-between;
    }
    
    .collection-title {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
    
    .product-card__info {
      padding: 15px;
    }
  }
{%- endstyle -%}

<div class="collection-page">
  <div class="collection-container">
    
    <div class="collection-header">
      <h1 class="collection-title">{{ collection.title }}</h1>
      {%- if collection.description != blank -%}
        <div class="collection-description">{{ collection.description }}</div>
      {%- endif -%}
      <div class="collection-count">
        {{ collection.products.size }} продукта
      </div>
    </div>

    <!-- Car Parts Search Section -->
    {% section 'car-parts-search' %}

    {%- if collection.products.size > 0 -%}
      
      <div class="collection-controls">
        <div class="collection-sorting">
          <label for="sort-select">Подреди по:</label>
          <select id="sort-select" name="sort_by">
            <option value="manual">Препоръчани</option>
            <option value="best-selling">Най-продавани</option>
            <option value="title-ascending">От А до Я</option>
            <option value="title-descending">От Я до А</option>
            <option value="price-ascending">Цена: ниска към висока</option>
            <option value="price-descending">Цена: висока към ниска</option>
            <option value="created-descending">Най-нови</option>
          </select>
        </div>
      </div>

      <div class="products-grid">
        {%- for product in collection.products -%}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image -%}
                  <img src="{{ product.featured_image | image_url: width: 400 }}" 
                       alt="{{ product.featured_image.alt | escape }}"
                       class="product-card__image"
                       loading="lazy">
                {%- else -%}
                  <div class="product-card__image" style="background-color: var(--color-surface); display: flex; align-items: center; justify-content: center; color: var(--color-text-light);">
                    Няма изображение
                  </div>
                {%- endif -%}
                
                {%- if product.compare_at_price > product.price -%}
                  <div class="product-card__badge">
                    Промоция
                  </div>
                {%- endif -%}
              </div>
            </a>
            
            <div class="product-card__info">
              {%- if product.vendor != blank -%}
                <div class="product-card__vendor">{{ product.vendor }}</div>
              {%- endif -%}
              
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              <div class="product-card__price-wrapper">
                <span class="product-card__price">
                  {{ product.price | money }}
                </span>
                {%- if product.compare_at_price > product.price -%}
                  <span class="product-card__compare-price">
                    {{ product.compare_at_price | money }}
                  </span>
                {%- endif -%}
              </div>
              
              <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" 
                        class="product-card__button"
                        {% unless product.available %}disabled{% endunless %}>
                  {%- if product.available -%}
                    Добави в количката
                  {%- else -%}
                    Изчерпано
                  {%- endif -%}
                </button>
              </form>
            </div>
          </div>
        {%- endfor -%}
      </div>

      {%- if paginate.pages > 1 -%}
        {% paginate collection.products by 24 %}
          <nav class="pagination" role="navigation" aria-label="Пагинация">
            {%- if paginate.previous -%}
              <a href="{{ paginate.previous.url }}" class="pagination__prev">
                ← Назад
              </a>
            {%- endif -%}

            {%- for part in paginate.parts -%}
              {%- if part.is_link -%}
                <a href="{{ part.url }}" class="pagination__item">{{ part.title }}</a>
              {%- else -%}
                {%- if part.title == paginate.current_page -%}
                  <span class="pagination__item current">{{ part.title }}</span>
                {%- else -%}
                  <span class="pagination__item">{{ part.title }}</span>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}

            {%- if paginate.next -%}
              <a href="{{ paginate.next.url }}" class="pagination__next">
                Напред →
              </a>
            {%- endif -%}
          </nav>
        {% endpaginate %}
      {%- endif -%}

    {%- else -%}
      
      <div class="empty-collection">
        <h2>Няма намерени продукти</h2>
        <p>Използвайте по-малко филтри или <a href="{{ collection.url }}">премахнете всички</a></p>
        <a href="{{ routes.all_products_collection_url }}" class="btn">
          Продължи пазаруването
        </a>
      </div>

    {%- endif -%}

  </div>
</div> 