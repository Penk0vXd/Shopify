[
  {
    "name": "theme_info",
    "theme_name": "Auto Parts Store",
    "theme_version": "1.0.0",
    "theme_author": "Auto Parts BG",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Language",
    "settings": [
      {
        "type": "header",
        "content": "Language Settings"
      },
      {
        "type": "select",
        "id": "locale",
        "label": "Default language",
        "options": [
          {
            "value": "bg",
            "label": "Български (Bulgarian)"
          },
          {
            "value": "en",
            "label": "English"
          }
        ],
        "default": "bg",
        "info": "Set Bulgarian as default language"
      },
      {
        "type": "checkbox",
        "id": "force_bulgarian",
        "label": "Force Bulgarian only",
        "default": true,
        "info": "Use only Bulgarian translations throughout the site"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#D32F2F"
      },
      {
        "type": "color",
        "id": "color_primary_dark",
        "label": "Primary dark color",
        "default": "#B71C1C"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_surface",
        "label": "Surface color",
        "default": "#F5F5F5"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#212121"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light text color",
        "default": "#757575"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading font",
        "default": "assistant_n4"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "label": "Heading scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "default": 120,
        "unit": "%"
      },
      {
        "type": "range",
        "id": "body_scale",
        "label": "Body scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "default": 100,
        "unit": "%"
      }
    ]
  },
  {
    "name": "Auto Parts Settings",
    "settings": [
      {
        "type": "header",
        "content": "Brand Display"
      },
      {
        "type": "checkbox",
        "id": "show_brand_logos",
        "label": "Show brand logos on homepage",
        "default": true
      },
      {
        "type": "select",
        "id": "brand_grid_columns",
        "label": "Brand grid columns",
        "options": [
          {
            "value": "3",
            "label": "3 columns"
          },
          {
            "value": "4",
            "label": "4 columns"
          },
          {
            "value": "5",
            "label": "5 columns"
          },
          {
            "value": "6",
            "label": "6 columns"
          }
        ],
        "default": "5"
      },
      {
        "type": "header",
        "content": "Year/Make/Model Search"
      },
      {
        "type": "checkbox",
        "id": "enable_ymm_search",
        "label": "Enable Year/Make/Model search",
        "default": true
      },
      {
        "type": "range",
        "id": "ymm_start_year",
        "label": "Oldest year in selector",
        "default": 1990,
        "min": 1980,
        "max": 2000,
        "step": 1
      },
      {
        "type": "header",
        "content": "Trust Badges"
      },
      {
        "type": "checkbox",
        "id": "show_trust_badges",
        "label": "Show trust badges",
        "default": true
      },
      {
        "type": "text",
        "id": "delivery_time",
        "label": "Delivery time text",
        "default": "Доставка до 24ч"
      },
      {
        "type": "text",
        "id": "warranty_text",
        "label": "Warranty text",
        "default": "2 години гаранция"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Enable sticky header",
        "default": true
      },
      {
        "type": "select",
        "id": "logo_height",
        "label": "Logo height",
        "options": [
          {
            "value": "40px",
            "label": "Small"
          },
          {
            "value": "60px",
            "label": "Medium"
          },
          {
            "value": "80px",
            "label": "Large"
          }
        ],
        "default": "60px"
      }
    ]
  },
  {
    "name": "Footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": true
      },
      {
        "type": "text",
        "id": "footer_copyright",
        "label": "Copyright text",
        "default": "© 2024 Auto Parts BG. Всички права запазени."
      }
    ]
  },
  {
    "name": "Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_sku",
        "label": "Show SKU/Part number",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show manufacturer",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_compatibility",
        "label": "Show compatibility info",
        "default": true
      }
    ]
  },
  {
    "name": "Bulgarian Localization",
    "settings": [
      {
        "type": "header",
        "content": "Currency"
      },
      {
        "type": "select",
        "id": "currency_format",
        "label": "Currency format",
        "options": [
          {
            "value": "suffix",
            "label": "100 лв."
          },
          {
            "value": "prefix",
            "label": "лв. 100"
          }
        ],
        "default": "suffix"
      },
      {
        "type": "header",
        "content": "Shipping Info"
      },
      {
        "type": "richtext",
        "id": "shipping_info",
        "label": "Shipping information",
        "default": "<p>Безплатна доставка за поръчки над 100 лв. Доставка с Еконт или Спиди.</p>"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Page layout"
      },
      {
        "type": "range",
        "id": "page_width",
        "label": "Page width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "label": "Section spacing",
        "min": 0,
        "max": 100,
        "step": 4,
        "default": 60,
        "unit": "px"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "header",
        "content": "Cart settings"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "notification",
            "label": "Notification"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "notification"
      },
      {
        "type": "checkbox",
        "id": "cart_show_note",
        "label": "Enable cart notes",
        "default": true
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "header",
        "content": "Search settings"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "label": "Show vendor in search results",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "label": "Show price in search results",
        "default": true
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/shopname"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/shopname"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/shopname"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/shopname"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
] 