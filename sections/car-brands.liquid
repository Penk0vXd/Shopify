{%- style -%}
  .brands-section {
    padding: 80px 0;
    background-color: var(--color-background);
  }

  .brands-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 50px;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: var(--color-primary);
    border-radius: 2px;
  }

  .brand-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-top: 60px;
  }

  .brand-card {
    background: var(--color-background);
    border: 2px solid var(--color-surface);
    border-radius: 12px;
    padding: 30px 20px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
    position: relative;
    overflow: hidden;
  }

  .brand-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.5s;
  }

  .brand-card:hover::before {
    left: 100%;
  }

  .brand-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
  }

  .brand-card img {
    width: 100%;
    max-width: 120px;
    height: auto;
    margin: 0 auto 20px;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
    display: block;
  }

  .brand-card:hover img {
    filter: grayscale(0%);
  }

  .brand-card__title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .brand-card__parts-count {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin-top: 8px;
  }

  @media (max-width: 768px) {
    .brand-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .brands-section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .brand-card {
      padding: 20px 15px;
    }
  }
{%- endstyle -%}

<section class="brands-section">
  <div class="brands-container">
    <h2 class="section-title">{{ section.settings.heading | default: 'homepage.browse_by_brand' | t }}</h2>
    
    <div class="brand-grid">
      {% assign available_brands = 'audi,bmw,mercedes,volkswagen,ford,toyota,honda' | split: ',' %}
      
      {%- for block in section.blocks -%}
        {%- if block.type == 'brand' -%}
          <a href="{{ block.settings.collection_url | default: '/collections/' | append: block.settings.brand_handle }}" 
             class="brand-card"
             {{ block.shopify_attributes }}>
            
            {%- if block.settings.brand_logo != blank -%}
              <img src="{{ block.settings.brand_logo | image_url: width: 200 }}" 
                   alt="{{ block.settings.brand_name }}" 
                   loading="lazy">
            {%- else -%}
              {%- assign brand_handle = block.settings.brand_handle | default: 'audi' -%}
              {%- if available_brands contains brand_handle -%}
                <img src="{{ brand_handle | append: '_medium.png' | file_url }}" 
                     alt="{{ block.settings.brand_name }}" 
                     loading="lazy">
              {%- else -%}
                <div style="width: 120px; height: 120px; background: var(--color-surface); border-radius: 8px; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; color: var(--color-text-light); font-size: 0.9rem; text-align: center;">
                  {{ block.settings.brand_name | truncate: 10 }}
                </div>
              {%- endif -%}
            {%- endif -%}
            
            <h3 class="brand-card__title">{{ block.settings.brand_name }}</h3>
            
            {%- if block.settings.parts_count != blank -%}
              <p class="brand-card__parts-count">{{ block.settings.parts_count }} {{ 'general.parts_available' | t | default: 'части налични' }}</p>
            {%- endif -%}
          </a>
        {%- endif -%}
      {%- endfor -%}
      
      {%- comment -%} Default brands if no blocks are configured {%- endcomment -%}
      {%- if section.blocks.size == 0 -%}
        {%- for brand in available_brands -%}
          <a href="/collections/{{ brand }}" class="brand-card">
            <img src="{{ brand | append: '_medium.png' | file_url }}" 
                 alt="{{ brand | capitalize }}" 
                 loading="lazy">
            <h3 class="brand-card__title">{{ brand | capitalize }}</h3>
          </a>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

