                  </svg>
              {%- endcase -%}
            </div>
            <div class="trust-badge__content">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
      
      {%- comment -%} Default badges if no blocks are configured {%- endcomment -%}
