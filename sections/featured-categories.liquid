{%- style -%}
  .categories-section {
    padding: 80px 0;
    background-color: var(--color-background);
  }

  .categories-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 50px;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: var(--color-primary);
    border-radius: 2px;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-top: 60px;
  }

  .category-card {
    background: var(--color-background);
    border: 2px solid var(--color-surface);
    border-radius: 12px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.5s;
  }

  .category-card:hover::before {
    left: 100%;
  }

  .category-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.1);
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: 20px;
    display: block;
  }

  .category-card__title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 15px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-card__description {
    font-size: 1rem;
    color: var(--color-text-light);
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .category-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .categories-section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .category-card {
      padding: 30px 20px;
    }
    
    .category-icon {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 480px) {
    .category-grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

