{%- style -%}
  .featured-products-section {
    padding: 80px 0;
    background-color: var(--color-surface);
  }

  .featured-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 20px;
    position: relative;
  }

  .section-subtitle {
    text-align: center;
    font-size: 1.1rem;
    color: var(--color-text-light);
    margin-bottom: 50px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: var(--color-primary);
    border-radius: 2px;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }

  .product-card {
    background: var(--color-background);
    border: 1px solid rgba(0,0,0,0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
  }

  .product-card:hover {
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    transform: translateY(-4px);
    border-color: var(--color-primary);
  }

  .product-card__image-wrapper {
    position: relative;
    padding-bottom: 75%;
    overflow: hidden;
    background-color: var(--color-surface);
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: var(--color-primary);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    z-index: 2;
  }

  .product-card__info {
    padding: 20px;
  }

  .product-card__vendor {
    font-size: 0.8rem;
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 5px;
  }

  .product-card__title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 10px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card__price-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 15px;
  }

  .product-card__price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .product-card__compare-price {
    font-size: 1rem;
    color: var(--color-text-light);
    text-decoration: line-through;
  }

  .product-card__button {
    width: 100%;
    background-color: var(--color-primary);
    color: white;
    border: none;
    padding: 12px;
    border-radius: 6px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
  }

  .product-card__button:hover {
    background-color: var(--color-primary-dark);
    transform: translateY(-1px);
  }

  .product-card__button:disabled {
    background-color: var(--color-text-light);
    cursor: not-allowed;
    transform: none;
  }

  .view-all-button {
    display: block;
    width: fit-content;
    margin: 0 auto;
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    padding: 15px 30px;
    border-radius: 6px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .view-all-button:hover {
    background-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(211, 47, 47, 0.3);
  }

  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }
    
    .featured-products-section {
      padding: 60px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .product-card__info {
      padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
  }
{%- endstyle -%}

<section class="featured-products-section">
  <div class="featured-container">
    <h2 class="section-title">{{ section.settings.heading | default: 'homepage.featured_products' | t }}</h2>
    {%- if section.settings.subheading != blank -%}
      <p class="section-subtitle">{{ section.settings.subheading }}</p>
    {%- endif -%}
    
    {%- assign collection = collections[section.settings.collection] | default: collections.all -%}
    {%- assign products_to_show = section.settings.products_to_show | default: 8 -%}
    
    {%- if collection.products.size > 0 -%}
      <div class="products-grid">
        {%- for product in collection.products limit: products_to_show -%}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image -%}
                  <img src="{{ product.featured_image | image_url: width: 400 }}" 
                       alt="{{ product.featured_image.alt | escape }}"
                       class="product-card__image"
                       loading="lazy">
                {%- else -%}
                  <div class="product-card__image" style="background-color: var(--color-surface); display: flex; align-items: center; justify-content: center; color: var(--color-text-light);">
                    {{ 'products.product.no_image' | t | default: 'Няма изображение' }}
                  </div>
                {%- endif -%}
                
                {%- if product.compare_at_price > product.price -%}
                  <div class="product-card__badge">
                    {{ 'products.product.sale' | t | default: 'Промоция' }}
                  </div>
                {%- endif -%}
              </div>
            </a>
            
            <div class="product-card__info">
              {%- if product.vendor != blank -%}
                <div class="product-card__vendor">{{ product.vendor }}</div>
              {%- endif -%}
              
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              <div class="product-card__price-wrapper">
                <span class="product-card__price">
                  {{ product.price | money }}
                </span>
                {%- if product.compare_at_price > product.price -%}
                  <span class="product-card__compare-price">
                    {{ product.compare_at_price | money }}
                  </span>
                {%- endif -%}
              </div>
              
              <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                <button type="submit" 
                        class="product-card__button"
                        {% unless product.available %}disabled{% endunless %}>
                  {%- if product.available -%}
                    {{ 'products.product.add_to_cart' | t }}
                  {%- else -%}
                    {{ 'products.product.sold_out' | t }}
                  {%- endif -%}
                </button>
              </form>
            </div>
          </div>
        {%- endfor -%}
      </div>
      
      {%- if section.settings.show_view_all and collection.products.size > products_to_show -%}
        <a href="{{ collection.url }}" class="view-all-button">
          {{ 'collections.general.view_all' | t | default: 'Виж всички продукти' }}
        </a>
      {%- endif -%}
    {%- else -%}
      <div style="text-align: center; padding: 40px; color: var(--color-text-light);">
        {{ 'collections.general.no_matches' | t | default: 'Няма налични продукти в момента.' }}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Препоръчани продукти"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Най-търсените части от нашите клиенти"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Products from this collection will be shown. Leave empty to show all products."
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of products to show",
      "min": 4,
      "max": 12,
      "step": 2,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %} 